{
  "name": "Classification Metrics",
  "description": "Computes precision, recall and F1-score of a classification.",
  "tags": [
    "statistical testing",
    "classification"
  ],
  "authors": [
    "tercen"
  ],
  "urls": [
    "https://github.com/tercen/classification_metrics_operator"
  ],
  "properties": [],
  "operatorSpec": {
    "kind": "OperatorSpec",
    "ontologyUri": "https://tercen.com/_ontology/tercen",
    "ontologyVersion": "0.0.1",
    "inputSpecs": [
      {
        "kind": "CrosstabSpec",
        "metaFactors": [
          {
            "kind": "MetaFactor",
            "name": "Row",
            "type": "",
            "description": "Optional row factor",
            "ontologyMapping": "row",
            "crosstabMapping": "row",
            "cardinality": "0..n",
            "factors": []
          },
          {
            "kind": "MetaFactor",
            "name": "Column",
            "type": "",
            "description": "Optional column factor",
            "ontologyMapping": "column",
            "crosstabMapping": "column",
            "cardinality": "0..n",
            "factors": []
          }
        ],
        "axis": [
          {
            "kind": "AxisSpec",
            "metaFactors": [
              {
                "kind": "MetaFactor",
                "name": "Measurement",
                "type": "numeric",
                "description": "Measurement values (per cell).",
                "ontologyMapping": "measurement",
                "crosstabMapping": "y",
                "cardinality": "1",
                "factors": []
              }
            ]
          },
          {
            "kind": "AxisSpec",
            "metaFactors": [
              {
                "kind": "MetaFactor",
                "name": "Predicted label",
                "type": "string",
                "description": "Predicted labels (classification output)",
                "ontologyMapping": "factor",
                "crosstabMapping": "color",
                "cardinality": "1",
                "factors": []
              }
            ]
          },
          {
            "kind": "AxisSpec",
            "metaFactors": [
              {
                "kind": "MetaFactor",
                "name": "True label",
                "type": "string",
                "description": "True/ground truth labels",
                "ontologyMapping": "factor",
                "crosstabMapping": "label",
                "cardinality": "1",
                "factors": []
              }
            ]
          }
        ]
      }
    ]
  }
}